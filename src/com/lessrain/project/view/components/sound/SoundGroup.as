package com.lessrain.project.view.components.sound {	/**	 * Groups Sounds and performs operations on them	 * 	 * @author patrickjuchli	 */	public class SoundGroup {				protected var _sounds:Object;						public function SoundGroup() {			_sounds = new Object();		}				public function dispose(includingAllSounds:Boolean = true):void {			if (includingAllSounds) disposeAllSounds();			else unregisterAllSounds();		}				// Add a sound to this group		public function registerSound(sound:IGroupableSound):SoundGroup {			if (sound == null) return null;			_sounds[sound.id] = sound;			return this;		}				// Remove a sound from this group		public function unregisterSound(sound:IGroupableSound):void {			if (sound == null) return;			delete _sounds[sound.id];		}				// Send stop() to all sounds		public function stopAllSounds():void {			for each(var sound:IGroupableSound in _sounds) {				if (sound) sound.stop();				}		}		// Send dispose() to all sounds		public function disposeAllSounds():void {			for each(var sound:IGroupableSound in _sounds) {				if (sound) sound.dispose();			}			unregisterAllSounds();		}				// Remove all sounds from this group		public function unregisterAllSounds():void {			_sounds = new Object();		}				public function getSound(id:String):IGroupableSound {			return _sounds[id];			}				public function logAllSounds():void {		}	}}